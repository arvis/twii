div class="container"
  h2 index example
  form class="form-horizontal" role="form" action="index" method="get"
    div class="form-group"
      label for="search" class="col-sm-2 control-label" Seach
      div class="col-sm-10"
        input type="text" id="search" class="form-control" name="search" value=@search_data

    div class="form-group"
      label for="nr_of_tweets" class="col-sm-2 control-label" Seach
      div class="col-sm-10"
        input type="text" id="nr_of_tweets" class="form-control" name="nr_of_tweets" value=@nr_of_tweets

    div class="form-group"
      div class="col-sm-offset-2 col-sm-10"
        button type="submit" class="btn btn-success" Search

  - if @tweets.empty?
    no data
  - else
    ul class="list-group"
      - for tw in @tweets
        li class="list-group-item" = tw.text

